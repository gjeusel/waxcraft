    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Edit(**/.env)",
      "Edit(**/.env.*)",
      "Read(**/*.tfvars)",
      "Edit(**/*.tfvars)",
      "Read(~/src/ops/**)",
      "Bash(sudo *)"
    ],
    "ask": ["Bash(rm *)", "Bash(curl *)", "Bash(wget *)", "Bash(http *)", "Bash(httpx *)"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "FILE_PATH=$(jq -r '.tool_input.file_path // .tool_input.filePath // empty' <<< \"$HOOK_INPUT\"); if [[ -z \"$FILE_PATH\" ]] || [[ ! \"$FILE_PATH\" =~ \\.py$ ]] || [[ ! \"$(basename \"$FILE_PATH\")\" =~ ^test_.*\\.py$|_test\\.py$ ]]; then exit 0; fi; VIOLATIONS=$(grep -n '^[[:space:]]\\+\\(import \\|from .* import \\)' \"$FILE_PATH\" 2>/dev/null || true); if [[ -n \"$VIOLATIONS\" ]]; then echo \"Dynamic imports detected in test file $FILE_PATH:\" >&2; echo \"$VIOLATIONS\" >&2; echo \"\" >&2; echo \"Move these imports to module level (top of file).\" >&2; exit 2; fi"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": false,
    "context7@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "sentry@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "astral@astral-sh": true
  },
  "promptSuggestionEnabled": false,
  "effortLevel": "medium",
  "skipDangerousModePermissionPrompt": true
}
