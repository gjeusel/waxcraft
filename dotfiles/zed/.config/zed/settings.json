// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "show_edit_predictions": false,
  "agent": {
    "play_sound_when_agent_done": true,
    "model_parameters": [],
    "default_model": {
      "provider": "openai",
      "model": "gpt-5",
    },
  },
  // "features": { "edit_prediction_provider": "supermaven" },
  "edit_predictions": { "mode": "eager" },
  "base_keymap": "VSCode",
  "theme": "Nord Dark",
  "buffer_font_size": 14,
  "vim_mode": true,
  "cursor_blink": false, // disable cursor blink
  "relative_line_numbers": "enabled", // use relative line numbers
  "ensure_final_newline_on_save": false,
  "project_panel": {
    "dock": "right",
  },
  // "inlay_hints": {
  //   "enabled": false,
  //   "show_type_hints": true,
  //   "show_parameter_hints": true,
  //   "show_other_hints": true,
  //   "show_background": false
  // },
  "tab_bar": { "show_nav_history_buttons": false },
  "toolbar": { "breadcrumbs": false, "quick_actions": false },
  "preferred_line_length": 100,
  "tab_size": 2,
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },
  "debugger": {
    "inline_values": false,
  },
  "scrollbar": {
    "show": "never", // hide the scroll bar
  },
  "terminal": {
    "copy_on_select": true,
    "detect_venv": { "on": { "directories": [] } },
    "button": false,
    "toolbar": { "breadcrumbs": false },
  },
  "experimental.theme_overrides": {
    "players": [
      {
        "cursor": "#d8dee9",
      },
    ],
    "syntax": {
      "comment": {
        "font_style": "italic",
      },
    },
  },
  "languages": {
    "Python": {
      "language_servers": ["ty", "ruff", "!basedpyright", "!pyright", "!pylsp"],
      // "language_servers": ["basedpyright", "ruff", "!pyright", "!pylsp"],
      "format_on_save": "on",
      "extend_comment_on_newline": true,
      "formatter": [
        {
          "language_server": {
            "name": "ruff",
          },
        },
      ],
    },
    "SQL": {
      "formatter": {
        "external": {
          "command": "sql-formatter",
          "arguments": ["--language", "postgresql"],
        },
      },
    },
  },
}
