function fuzzy_gco() {
  branch=`git branch -a| fzf`
  pattern_to_exclude="remotes/origin/"
  local_branch=`echo "$branch"| sed "s:$pattern_to_exclude::"`
  git checkout `echo $local_branch`
}
alias gcos=fuzzy_gco

