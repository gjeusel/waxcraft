[core]
	editor = nvim

[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[difftool]
	prompt=false
[diff]
	path = vimdiff

[diff "sopsdiffer"]
	textconv = sops -d

