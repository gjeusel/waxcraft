[core]
	editor = nvim

[pager]
	difftool = true

[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[difftool]
	prompt=false
[diff]
	tool = difftastic
	external = difft

[difftool "difftastic"]
	cmd = difft --display inline --color always "$LOCAL" "$REMOTE"
[diff "sopsdiffer"]
	textconv = sops -d


[pager]
	difftool = true

[pull]
	rebase = false

[init]
	defaultBranch = main

[push]
	autoSetupRemote = true
